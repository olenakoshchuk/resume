<header>
    <div>
        {{> title data=name big=true}}
    </div>
    <div>
        <b>{{description}}</b>
    </div>
    <br>
    <div>
        {{#with history}}
        <h2>History</h2>
            <em>Year: {{year}}, 
                <br>
                Founder: {{founder}}
            </em>
        {{/with}}
    </div>
    <br>
    <hr>
</header>
<main>
    <div>
        <h3><span class="badge rounded-pill text-bg-success">Types</span></h3>
        <section>
            {{> title data= Types }}
            <ul>
                {{#each types }}
                    <li> {{this}}</li>
                {{/each}}
            </ul>
        </section>
    </div>
    <br>
    <hr>
    <div>
        <h3><span class="badge rounded-pill text-bg-danger">Syntax</span></h3>
    </div>
        {{#with syntax}}
        <section>
            <syntax>
                <b>variables:</b> {{variables}}
                <br>
                <b>functions:</b> {{functions}}
                <br>
                <b>conditionals:</b> {{conditionals}}
                <br>
                <b>loops:</b> {{loops}}
                <br>
                <b>classes:</b> {{classes}}
            </syntax>
        </section>
        {{/with}}
        <br>
        <hr>
        <div>
            <h3><span class="badge rounded-pill text-bg-warning">Features</span></h3>
            <section>
                <ul>
                    {{#each features}}
                    <li> {{this}}</li>
                    {{/each}}
                </ul>
            </section>
        </div>
        <br>
        <hr>
        <div>
            <h3><span class="badge rounded-pill text-bg-info">libraries</span></h3>
            <section>
                <ul>
                    {{#each libraries}}
                    <li> {{this}}</li>
                    {{/each}}
                </ul>
            </section>
        </div>
        <br>
        <hr>
        <div>
            <h3><span class="badge rounded-pill text-bg-info">Tools</span></h3>
            <section>
                <ul>
                    {{#each tools}}
                    <li> {{this}}</li>
                    {{/each}}
                </ul>
            </section>
        </div>
        <br>
        <hr>
        <div>
            <button type="button" class="btn btn-link">Community</button>
            {{#each community}}
            <section>
                <community>
                    <b>Name:</b> <i>{{name}}</i>
                    <br>
                    <b>Type:</b> <i>{{type}}</i>
                </community>
            </section>
            {{/each}}
        </div>   
</main>