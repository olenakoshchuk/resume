<header>
    {{#with navigation}}
        <div class='row'>
            <div class='col'>
                <div class='card'>
                    <div class='card-body d-flex justify-content-between'>
                        <h1 class="pt-3">SHOP</h1>
                        <div class='nav d-flex align-items-center'>
                            {{#each links}}
                                <div class='nav-item'>
                                    <a class='nav-link {{#if @last}}disabled{{/if}}' href='{{href}}'>{{text}}</a>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>  
            </div>
        </div>  
    {{/with}}
</header>
<main>
    <section class="py-5">
        {{#with newsBlock}}
            <h2 class="text-center mb-2">{{title}}</h2>
                <div class="row gy-4 gx-2">
                    {{#each cards}}
                        <div class="col-3">
                            <div class="card text-bg-success mb-3 h-100">
                                <div class="card-header border-light">
                                    {{title}}
                                    {{#if idNew}}
                                        <span class="badge rounded-pill text-bg-success mx-2">New</span>
                                    {{/if}}
                                    
                                    {{#if isTop}}
                                        <span class="badge rounded-pill text-bg-danger mx-2">Top</span>
                                    {{/if}}
                                </div>
                                <div class="card-body h-100">
                                    <p class="card-text">{{description}}</p>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
        {{/with}}
    </section>
    <hr>  
    <section class="py-5">
        {{#with goodsBlock}}
            <ul class="nav nav-tabs">
                {{#each tabs}}
                    <li class="nav-item">
                        <a class="nav-link {{#if isActive}}fw-semibold active{{/if}} {{#if isDisabled}}disabled{{/if}}" href="#">{{text}}</a>
                    </li>
                {{/each}}
            </ul>
            <div class="row gy-4 gx-2 py-5">
                {{#each cards}}
                    <div class="col-4">
                        <div class="card mb-3 h-100">
                            <img src="{{image}}" class="card-img-top" alt="{{title}}">
                            <div class="card-body h-100">
                                <h5 class="card-title">
                                    {{title}}
                                    
                                    {{#if isHot}}
                                        <span class="badge rounded-pill text-bg-warning text-light text-uppercase mx-2">hot!</span>
                                    {{/if}}
                                    
                                    {{#if idNew}}
                                        <span class="badge rounded-pill text-bg-primary mx-2">New</span>
                                    {{/if}}
                                </h5>
                                <p class="card-text">{{description}}</p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>            
        {{/with}}
    </section>
    <hr>   
    <section class="py-5">
        {{#with subscribe}}
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body text-bg-dark d-flex justify-content-between">
                            <div>
                                <h2>{{header}}</h2>
                                <p>{{description}}</p>
                            </div>
                            <div class=" d-flex align-items-center">
                                {{#each buttons}}
                                    <span class="mx-1">{{> btn-prim}}</span>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/with}}
    </section>
    <hr>  
    <section class="py-5">
        {{#with service}}
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body text-bg-success text-center">
                                <h2>{{title}}</h2>
                                <p>{{description}}</p>
                                {{#each buttons}}
                                    {{> btn-prim}}
                                {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        {{/with}}
    </section>
    <hr>      
</main>
<footer>
    <section class="py-5">
            <div class="row g4">
                {{#each footer}}
                    <div class="col-2">
                        <div class="card border-light">
                            {{#each this}}
                                <a href="{{this.link}}" class="m-2 text-decoration-none
                                {{#if @last}}
                                    nav-link disabled                                 
                                {{/if}}
                                ">{{this.text}}</a>
                            {{/each}}
                        </div>
                    </div>
                {{/each}}
            </div>
    </section>
</footer>